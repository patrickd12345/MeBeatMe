# MeBeatMe Environment Configuration
# Copy this file to .env and update with your actual values

# Domain Configuration
DOMAIN=ready2race.me
SUBDOMAIN=mebeatme
FULL_DOMAIN=mebeatme.ready2race.me

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/mebeatme
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=mebeatme
# DATABASE_USER=mebeatme_user
# DATABASE_PASSWORD=your_password

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGINS=https://mebeatme.ready2race.me,https://ready2race.me
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/mebeatme.ready2race.me.crt
SSL_KEY_PATH=/etc/ssl/private/mebeatme.ready2race.me.key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_SYNC=true
ENABLE_ANALYTICS=true
ENABLE_HEALTH_CHECK=true

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
API_KEY_SECRET=your_api_key_secret_here
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=gpx,tcx,fit
UPLOAD_DIRECTORY=/var/uploads/mebeatme

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
