{
  "name": "mebeatme",
  "version": "1.0.0",
  "description": "MeBeatMe - Personal Performance Index Dashboard",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Building for Vercel...' && echo 'Build timestamp:' && date && echo 'Build completed successfully'",
    "build:gradle": "gradlew :web:build",
    "build:web": "npm run copy:assets",
    "copy:assets": "if not exist dist mkdir dist && copy dashboard.html dist\\ && copy dashboard-vercel.html dist\\ && copy vercel.json dist\\ && copy package.json dist\\",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "preview": "vercel",
    "serve": "cd dist && python -m http.server 8082",
    "serve:local": "python -m http.server 8082",
    "test": "gradlew :shared:test :server:test :web:test",
    "test:shared": "gradlew :shared:test",
    "test:server": "gradlew :server:test",
    "test:web": "gradlew :web:test",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "clean": "gradlew clean && if exist dist rmdir /s /q dist",
    "ci:build": "npm run test && npm run build",
    "ci:deploy": "npm run ci:build && npm run deploy",
    "status": "vercel ls",
    "logs": "vercel logs"
  },
  "keywords": [
    "fitness",
    "running",
    "performance",
    "dashboard",
    "strava",
    "ppi"
  ],
  "author": "Patrick Duchesneau",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/MeBeatMe.git"
  },
  "homepage": "https://mebeatme.ready2race.run",
  "dependencies": {
    "@vercel/kv": "^2.0.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0"
  }
}
